<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Left">
            <StackPanel>
                <Border x:Name="remove" MouseDown="delNum"  BorderBrush="Black"  BorderThickness="2">
                    <Label VerticalAlignment="Center" HorizontalAlignment="Center" Content="remove" Foreground="Black"/>
                </Border>
                <Border x:Name="append" MouseDown="addNum" BorderBrush="Black" BorderThickness="2" >
                    <Label VerticalAlignment="Center" HorizontalAlignment="Center" Content="append" Foreground="Black"/>
                </Border>
                <Border x:Name="clear"  MouseDown="clearNumList" BorderBrush="Black" BorderThickness="2" >
                    <Label FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Content="clear" Foreground="Black"/>
                </Border>
            </StackPanel>
        </Grid>
        <Grid>
            <ListView Name="NumList" Width="180" Height="180"/>
        </Grid>
    </Grid>
</Window>
